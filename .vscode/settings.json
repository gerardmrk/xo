{
  "editor.detectIndentation": false,
  "npm.packageManager": "yarn",
  "eslint.enable": true,
  "eslint.options": {
    "configFile": "app/clientwebapp/config/syntax/.eslintrc"
  },
  "eslint.packageManager": "yarn",
  "tslint.enable": true,
  "tslint.packageManager": "yarn",
  "tslint.configFile": "app/clientwebapp/config/syntax/tslint.json",
  "tslint.exclude": "${rootPath}/config/syntax/custom-rules",
  "prettier.printWidth": 100,
  "go.lintTool": "gometalinter",
  "[go]": {
    "editor.tabSize": 4
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  }
}
