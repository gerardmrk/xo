{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2017", "dom", "scripthost"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "removeComments": true,
    "paths": {
      "@translations/*": ["config/i18n/translations/*"],
      "@proto/js": ["src/proto/js/index.d.ts", "src/proto/js/index.js"],
      "@client/*": [
        "src/client/*",
        "src/client/*/index.ts",
        "src/client/*/index.tsx",
        "src/client/*/index.js",
        "src/client/*/index.jsx",
        "src/client/*/index.json"
      ],
      "@renderer/*": [
        "src/renderer/*",
        "src/renderer/*/index.ts",
        "src/renderer/*/index.tsx",
        "src/renderer/*/index.js",
        "src/renderer/*/index.jsx",
        "src/renderer/*/index.json"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
